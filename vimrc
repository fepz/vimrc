call plug#begin()
Plug 'tpope/vim-sensible'
Plug 'tpope/vim-fugitive'
Plug 'airblade/vim-gitgutter'
Plug 'vim-airline/vim-airline'
call plug#end()

filetype plugin indent on 

set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4

set autoindent

" show line numbers
set number

colo desert
syntax on

